<!-- carousel-start -->
<div class="container-fluid my-carousel">
    <div id="carousel{{ module }}" class="carousel slide carousel-fade" data-bs-ride="carousel"
         data-bs-interval="5000">
        <div class="carousel-indicators">
            {% for banner in banners %}
                <button type="button" data-bs-target="#carousel{{ module }}" data-bs-slide-to="{{ loop.index0 }}"
                        {% if loop.index0 == 0 %} class="active" {% endif %} aria-current="true" aria-label="Slide
                        1"></button>
            {% endfor %}
        </div>
        <div class="carousel-inner">
            {% for banner in banners %}
            <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}">
                <img src="{{ banner.image }}" class="d-block w-100" alt="{{ banner.title }}">
            </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ module }}"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ module }}"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- carousel-end -->